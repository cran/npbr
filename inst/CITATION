citHeader("To cite npbr in publications use:")

citEntry(entry = "Article",
  title        = "{npbr}: A Package for Nonparametric Boundary Regression in {R}",
  author       = personList(as.person("Abdelaati Daouia"),
                   as.person("Thibault Laurent"),
                   as.person("Hohsuk Noh")),
  journal      = "Journal of Statistical Software",
  year         = "2017",
  url          = "http://www.jstatsoft.org/",

  textVersion  =
  paste("Abdelaati Daouia, Thibault Laurent, Hohsuk Noh (2017).",
        "npbr: A Package for Nonparametric Boundary Regression in R.",
        "Journal of Statistical Software, Forthcoming.",
        "URL http://www.jstatsoft.org/")
)

